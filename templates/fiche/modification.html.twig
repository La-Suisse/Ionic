{% extends 'base.html.twig' %}

{% block title %}Modification - GSB
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1 class="text-center">Modification</h1>
		<h3>Forfait</h3>
		<ul class="list-group mb-3 hover-blue">
			<li class="list-group-item align-items-end">
				{{ form_start(form1) }}
				<div class="row">
					<div class="col-6">
						{{forfaits[0].monType.libelle}}
						({{forfaits[0].monType.prix}}€)
					</div>
					<div class="col-3">
						{{form_widget(form1.quantite)}}
					</div>
					<div class="col-3">
						{{form_widget(form1.sauvegarder)}}
					</div>
				</div>
				{{ form_end(form1) }}
			</li>

			<li class="list-group-item align-items-end">
				{{ form_start(form2) }}
				<div class="row">
					<div class="col-6">
						{{forfaits[1].monType.libelle}}
						({{forfaits[1].monType.prix}}€)
					</div>
					<div class="col-3">
						{{form_widget(form2.quantite)}}
					</div>
					<div class="col-3">
						{{form_widget(form2.sauvegarder)}}
					</div>
				</div>
				{{ form_end(form2) }}
			</li>

			<li class="list-group-item align-items-end">
				{{ form_start(form3) }}
				<div class="row">
					<div class="col-6">
						{{forfaits[2].monType.libelle}}
						({{forfaits[2].monType.prix}}€)
					</div>
					<div class="col-3">
						{{form_widget(form3.quantite)}}
					</div>
					<div class="col-3">
						{{form_widget(form3.sauvegarder)}}
					</div>
				</div>
				{{ form_end(form3) }}
			</li>

			<li class="list-group-item align-items-end">
				{{ form_start(form4) }}
				<div class="row">
					<div class="col-6">
						{{forfaits[3].monType.libelle}}
						({{forfaits[3].monType.prix}}€)
					</div>
					<div class="col-3">
						{{form_widget(form4.quantite)}}
					</div>
					<div class="col-3">
						{{form_widget(form4.sauvegarder)}}
					</div>
				</div>
				{{ form_end(form4) }}
			</li>
		</ul>
		<h3>Hors Forfait</h3>
		<ul class="list-group mb-3 hover-blue">
			{% for horsforfait in horsForfaits %}
				<li class="list-group-item align-items-end ">
					<div class="row">
						<div class="col-6">
							{{horsforfait.libelle}}
							({{horsforfait.date|date('d/m/Y')}})
						</div>
						<div class="col-3" style="margin:auto">
							<p style="float: right;">Prix :
								{{horsforfait.prix}}€</p>
						</div>
						<div class="col-3">
							<a href="{{ path('supprimer', {'id': horsforfait.id}) }}" class="btn btn-danger btn-sm" style="float: right;" role="button">
								<i class="far fa-trash-alt"></i>
							</a>
						</div>
					</div>
				</li>
			{% endfor %}

			<div class="collapse" id="collapse">
				{{ form_start(form) }}
				<li class="list-group-item align-items-end">
					<div class="row">
						<div class="col-3">
							{{form_widget(form.libelle)}}
						</div>
						<div class="col-4">
							{{form_widget(form.date)}}
						</div>
						<div class="col-2">
							{{form_widget(form.prix)}}
						</div>
						<div class="col-3">
							{{form_widget(form.sauvegarder)}}
						</div>

					</div>
				</li>

				{{ form_end(form) }}
			</div>

		</ul>
		<a class="" style="border-radius:50%; color:black; font-size:40px" data-toggle="collapse" href="#collapse" aria-expanded="false" aria-controls="collapse">
			<i class="fas fa-plus-circle"></i>
		</a>
	</div>
{% endblock %}
