{% extends 'base.html.twig' %}

{% block title %}Information - GSB
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1 class="text-center">Information</h1>
		<h3>Forfait</h3>
		<ul class="list-group mb-3 hover-blue">
			<li class="list-group-item align-items-end">
				<div class="row">
					{{forfaits[0].monType.libelle}}
					({{forfaits[0].monType.prix}}€)

					{{ form_start(form1) }}
					<div class="">
						{{form_widget(form1.quantite)}}
					</div>
					<div style="float:right">
						{{form_widget(form1.sauvegarder)}}
					</div>
					{{ form_end(form1)}}
				</div>
			</li>
		</ul>
		<h3>Hors Forfait</h3>
		<ul class="list-group mb-3 hover-blue">
			{% for horsforfait in horsForfaits %}
				<li class="list-group-item align-items-end">{{horsforfait.libelle}}
					({{horsforfait.date|date('d/m/Y')}})
					<a href="{{ path('supprimer', {'id': horsforfait.id}) }}" class="btn btn-danger btn-sm" style="float: right;" role="button">
						<i class="far fa-trash-alt"></i>
					</a>

					<a href="#" class="btn btn-dark btn-sm" style="float: right;" role="button">
						Modifier
					</a>
					<p style="float: right;">Prix :
						{{horsforfait.prix}}€</p>
				</li>
			{% endfor %}

			<div class="collapse" id="collapse">
				{{ form_start(form) }}
				<li class="list-group-item align-items-end">
					<div class="row">
						<div class="col-3">
							{{form_widget(form.libelle)}}
						</div>
						<div class="col-4">
							{{form_widget(form.date)}}
						</div>
						<div class="col-2">
							{{form_widget(form.prix)}}
						</div>
						<div class="col-3">
							{{form_widget(form.sauvegarder)}}
						</div>

					</div>
				</li>

				{{ form_end(form) }}
			</div>

		</ul>
		<a class="" style="border-radius:50%; color:black; font-size:40px" data-toggle="collapse" href="#collapse" aria-expanded="false" aria-controls="collapse">
			<i class="fas fa-plus-circle"></i>
		</a>
	</div>
{% endblock %}
