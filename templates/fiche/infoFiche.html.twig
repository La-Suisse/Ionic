{% extends 'base.html.twig' %}

{% block title %}Information - GSB
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.center {
			margin-top: 10px;
		}
	</style>

	<div class="example-wrapper">
		<h1 class="text-center">
			{{maFiche.date|date('M Y')}}
			({{maFiche.monEtat.libelle}})
		</h1>
		<h3>Forfait</h3>
		<ul class="list-group mb-3 hover-blue">
			{% for forfait in forfaits %}
				<li class="list-group-item align-items-end">
					<div class="center">
						{{forfait.monType.libelle}}
						({{forfait.monType.prix}}€)
						<p style="float: right;">Quantité(s) :
							{{forfait.quantite}}</p>
					</div>
				</li>
			{% endfor %}
		</ul>
		<h3>Hors Forfait</h3>
		<ul class="list-group mb-3 hover-blue">
			{% for horsforfait in horsForfaits %}
				<li class="list-group-item align-items-end">
					<div class="center">
						{{horsforfait.libelle}}
						({{horsforfait.date|date('d/m/Y')}})
						<p style="float: right;">Prix :
							{{horsforfait.prix}}€</p>
					</div>
				</li>
			{% endfor %}
		</ul>

		<h4 class="text-right">Total:
			{{maFiche.montant}}€</h4>
	</div>
{% endblock %}
