{% extends 'base.html.twig' %}

{% block title %}Acceuil - GSB
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;

		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		body,
		html {
			height: 100%;
		}
		.bg {
			/* The image used */
			background-image: url("images/background.jpg");

			/* Full height */
			height: 100%;

			/* Center and scale the image nicely */
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}
	</style>

	<div class="bg">
		<h1 class="text-center">Bienvenue sur le site de GSB</h1>

	</div>
{% endblock %}
